rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Esta regra permite que qualquer pessoa leia e escreva em qualquer
    // parte do seu banco de dados. Isso é útil para o desenvolvimento inicial,
    // mas deve ser substituído por regras de segurança mais restritivas
    // antes de lançar o aplicativo para o público.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
